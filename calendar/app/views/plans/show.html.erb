<div class="showDetail">
  <h2><%= @plan.title %></h2>
    <p>日程: <%= @plan.date.strftime("%Y年 %-m月 %-d日") %></p>
    <p>開始時刻: <%= @plan.start_time.strftime("%-H:%M") %></p>
    <p>終了時刻: <%= @plan.end_time.strftime("%-H:%M") %></p>
    <p>詳細: <%= @plan.detail %></p>
  <%= link_to "編集する", "/plans/#{@plan.date}/#{@plan.id}/edit", id: "edit" %>
  <%= link_to "削除する", "/plans/#{@plan.date}/#{@plan.id}", method: :delete, id: "delete",
    data: { confirm: "本当に削除しますか？" } %>
  <br><br>
  <%= link_to "カレンダーに戻る", "/plans/#{@plan.date}", id: "return" %>
</div>
